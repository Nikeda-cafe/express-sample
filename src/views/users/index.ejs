<h1>Posts from JSONPlaceholder</h1>

<% if (posts && posts.length > 0) { %>
  <table>
    <thead>
      <tr>
        <th>ID</th>
        <th>User ID</th>
        <th>Title</th>
        <th>Body</th>
      </tr>
    </thead>
    <tbody>
      <% posts.forEach(post => { %>
        <tr>
          <td><%= post.id %></td>
          <td><%= post.userId %></td>
          <td><%= post.title %></td>
          <td><%= post.body.length > 100 ? post.body.substring(0, 100) + '...' : post.body %></td>
        </tr>
      <% }); %>
    </tbody>
  </table>
<% } else { %>
  <p>No posts found.</p>
<% } %>
